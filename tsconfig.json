{
  "compilerOptions": {
    "lib": ["es2017", "dom"],
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "strict": true,
    "noUnusedLocals": true
  },
  "typeRoots": ["./node_modules/@types", "./js/types"],
  "include": ["js"],
  "exclude": ["node_modules"]
}
