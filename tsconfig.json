{
  "compilerOptions": {
    "lib": ["es2017", "dom"],
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "strict": true,
    "noUnusedLocals": true,
    "target": "esNext",
    "moduleResolution": "node",
    "module": "esNext",
    "baseUrl": "src"
  },
  "typeRoots": ["./node_modules/@types", "./src/js/types"],
  "include": ["./src/js"],
  "exclude": ["./node_modules"]
}
